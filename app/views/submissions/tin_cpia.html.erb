<div id="updating_modal">
  <div style="display: table-cell; vertical-align: middle;">
    <div id="spinner"></div>
  </div>
</div>
<% form_tag :action => 'index' do %>
    <div class="mips_home_tab">
      <h3 class="section_header">TIN CPIA Submissions</h3>
      <div class="mips_table_div scrolling_div">
        <table id="mips_quality_table">
          <thead>
          <tr>
            <td>Clinic Name</td>
            <td>TIN</td>
            <td>Method</td>
            <td>Status</td>
            <td>CPIA<br />Expected</td>
            <td>CPIA<br />CMS</td>
            <td>Submission<br />Confirmation#</td>
            <td>Physician<br />Compare Status</td>
          </tr>
          </thead>
          <tbody class="text_vertical_aligned_middle">
          <% @tin_summary_attestation_clinics.each do |attestation_clinic| %>
              <%# x_clinic_event = XAttestationClinicEvent.find_by_attestation_clinic_id_and_event_id(attestation_clinic.id, @selected_event_id) %>
              <%# use_manual_fields_flag = (x_clinic_event ? x_clinic_event.cpia_use_manual_fields_flag : false) %>
              <tr>
                <td title="Clinic Name"><%= attestation_clinic.name %></td>
                <td title="TIN"><%= attestation_clinic.TIN %></td>
                <td title="Method"><%= ((attestation_clinic.attestation_method_name) ? attestation_clinic.attestation_method_name : 'Not Set') %></td>
                <td title="Status"></td>
                <!--<td><%#= use_manual_fields_flag ? remove_tailing_zeroes(attestation_clinic.manual_cpia, 0) : remove_tailing_zeroes(attestation_clinic.cpia, 0) %></td>-->
                <td title="CPIA Expected"><%= remove_tailing_zeroes(attestation_clinic.cpia, 0) %></td>
                <td title="CPIA CMS"><%= remove_tailing_zeroes(attestation_clinic.cms_cpia, 1) %></td>
                <td title="Submission Confirmation#"></td>
                <td title="Physician Compare Status"></td>
              </tr>
          <% end -%>
          </tbody>
        </table>
      </div>
    </div>
<% end %>